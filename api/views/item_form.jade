extends layout 

block content 
  h1  #{title}

  form(method='POST' action = '')
    div.form-group
      label(for='name') Name: 
      input#name.form-control(type='text' name='name' value=(undefined===item ? '' : item.name))
      label(for='imgUrl') Image URL:
      input#imgUrl.form-control(type='text' name='imgUrl' value=(undefined===item ? '' : item.imgUrl))
      label(for='price') Price: 
      input#price.form-control(type='number' step='0.01' name='price' value=(undefined===item ? '' : item.price))
      label(for='type') Type: 
      input#type.form-control(type='text' name='type' value=(undefined===item ? '' : item.type))
    button.btn.btn-primary(type='submit') Submit 

  if errors 
    ul 
      for error in errors 
        li!= error.msg  